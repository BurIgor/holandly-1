html
    head
    meta(charset = 'UTF-8')
    title= "HOLANDLY"
    style
        include ../public/css/bootstrap.min.css
        include ../public/css/personal.css
    body
        div(class="card")
            //-- Main menu--
            div(class="card-header")
                ul(class="nav nav-tabs  flex-grow-1  card-header-tabs" id="myTab" role="tablist" style=" margin-top: 2rem")
                    li(class="nav-item flex-grow-1")
                        img(src="../views/img/logo-h4.png" style="height: 4rem; margin-top: -2rem")
                    li(class="nav-item")
                        a(class="nav-link text-warning active" id="dashboard-tab" data-toggle="tab" href="#div-dashboard"
                        role="tab" aria-controls="dashboard" aria-selected="true") События
                            span(class="badge badge-warning" id="visitor-amount")
                    li(class="nav-item")
                        a(class="nav-link text-success" id="event-tab" data-toggle="tab" href="#eventBoard"
                        role="tab" aria-controls="event" aria-selected="false") Расписания
                            span(class="badge badge-success" id="event-amount")
                    li(class="nav-item")
                        a(class="nav-link text-primary" id="pattern-tab" data-toggle="tab" href="#patternBoard"
                        role="tab" aria-controls="pattern" aria-selected="false") Шаблоны
                            span(class="badge badge-primary" id="pattern-amount")
                    li(class="nav-item")
                        div(class="dropdown")
                            button(class="btn btn-link dropdown-toggle" type="button" id="dropdownMenuButton"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Пользователь
                        div(class="dropdown-menu" aria-labelledby="dropdownMenuButton")
                            a(class="dropdown-item" href="#" onclick="logOut()") Выход
            div(class="tab-content" id="myTabContent" style="margin: 2%")
                // dashboard-------------------------------------
                div(class="tab-pane fade show active text-left"
                id="div-dashboard" role="tabpanel" aria-labelledby="dashboard-tab")
                //  event-------------------------------------
                div(class="tab-pane fade" id="eventBoard" role="tabpanel" aria-labelledby="Event-tab")
                    div(id="div-event")
                // pattern-------------------------------------
                div(class="tab-pane fade text-center" id="patternBoard" role="tabpanel" aria-labelledby="Pattern-tab")
                    div(class="row" id="pattern-row")
                    button(type="button" class="btn btn-primary" data-toggle="modal" data-target="#newPatternModal" onclick="newPattern()") Создать новый шаблон
                    div(class="tab-pane fade" id="logout" role="tabpanel" aria-labelledby="Pattern-tab")
        p(class="mt-1 mb-1 text-muted text-center") © 2018 Holateam 4
    script
        include ../public/js/jquery-3.3.1.min.js
        include ../public/js/popper.min.js
        include ../public/js/bootstrap.min.js
        include ../public/js/popper.min.js
        include ../public/js/personal.js
        include ../public/js/moment.js