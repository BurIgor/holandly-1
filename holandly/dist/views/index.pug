extends layout

block content
    .events
        .head
            .event-owner= username
    .event-list
        ul
            - list = patterns;
            each item in list
                    li
                        .patternId= item.patternId
                        .event-header= item.event
                        - if (item.description !== null) {
                            .event-desc= item.description
                        - }

    .bg-modal
        .modal-content
            #modal-owner= username
            #modal-desc= eventDesc
            form
                p.modal-button.confirm Yes
                p.modal-button No
    script(src="/js/jquery-3.3.1.min.js")
    script(src='/js/event-handler.js')
