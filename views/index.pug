extends layout

block content
    .events
    .event-list
        ul
            - list = patterns;
            each item in list
                    li
                        .patternId= item.patternId
                        .event-header= item.event
                        - if (item.description !== null) {
                            .event-desc= item.description
                        - }

    .bg-modal
        .modal-content
            #modal-owner= username
            #modal-desc= eventDesc
            form
                p.modal-button.confirm Да
                p.modal-button Нет
    script
        include ../dist/public/js/jquery-3.3.1.min.js
        include ../dist/public/js/event-handler.js
